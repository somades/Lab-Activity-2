def hollow_square(n):
    print("X" * n)
    
    for i in range(n - 2):
        print("X" + " " * (n - 2) + "X")
    
    if n > 1:
        print("X" * n)

n = int(input("Enter the side length of the square: "))

hollow_square(n)
